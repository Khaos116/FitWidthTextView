<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cc.fitwidth.widget.MainActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center|bottom"
        android:padding="15dp"
        android:text="FitWidthTextView(强制左对齐)"
        android:textColor="#ff00ff"
        tools:ignore="HardcodedText"
        />

    <com.cc.fitwidth.widget.FitWidthTextView
        android:id="@+id/mainTv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33ff00ff"
        android:paddingStart="12dp"
        android:paddingTop="15dp"
        android:paddingEnd="12dp"
        android:paddingBottom="15dp"
        android:textColor="@color/teal_200"
        android:textSize="15sp"
        tools:text="Hello World!"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center|bottom"
        android:padding="15dp"
        android:text="普通TextView"
        android:textColor="#0000ff"
        tools:ignore="HardcodedText"
        />

    <TextView
        android:id="@+id/mainTv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3300fff0"
        android:paddingStart="12dp"
        android:paddingTop="15dp"
        android:paddingEnd="12dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="Hello World!"
        />
  </LinearLayout>
</androidx.core.widget.NestedScrollView>